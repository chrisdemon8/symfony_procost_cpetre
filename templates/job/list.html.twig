{% extends 'layout.html.twig' %}

{% block title %}Liste des Métiers -
	{{ parent() }}
{% endblock %}

{% block content %}

	<main class="app-content">
		<div class="app-title">
			<div>
				<h1>
					<i class="fa fa-users"></i>&nbsp;Métiers</h1>
			</div>
			<ul class="app-breadcrumb breadcrumb">
				<li class="breadcrumb-item">
					<a href="{{ path('main_homepage') }}">
						<i class="fa fa-home fa-lg"></i>
					</a>
				</li>
				<li class="breadcrumb-item">Métiers</li>
			</ul>
		</div>
		<div class="tile pb-5">
			<a href="{{ path('job_add') }}" class="btn btn-primary float-right mb-4">
				<i class="fa fa-plus-circle mr-2"></i>Ajouter un métier</a>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Métier</th> 
							<th></th>
						</tr>
					</thead>
					<tbody>
						{%  for job in pagination %}
							<tr>
								<td>{{ job.label }}</td>
								<td>
									<a href="{{ path('job_delete', {'id': job.id}) }}" class="btn btn-danger btn-sm" style="float: right;">
										<i class="fa fa-close mr-0"></i>
									</a>
									<a href="{{ path('job_modif', {'id': job.id}) }}" class="btn btn-info btn-sm" style="float: right; margin-right: 10px">
										<i class="fa fa-pencil mr-0"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<hr/>
			<nav class="float-right">
				{{ knp_pagination_render(pagination) }}
			</nav>
		</div>
	</main>


{% endblock %}
