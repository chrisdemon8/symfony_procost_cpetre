{% extends 'layout.html.twig' %}

{% block title %}
	{% if app.request.get('_route') == 'project_add' %}Ajout {% else %} Edition {% endif %} d'un projet -
	{{ parent() }}
{% endblock %}

{% block content %}


	<main class="app-content">
		<div class="app-title">
			<div>
				<h1>
					<i class="fa fa-users"></i>&nbsp;{% if app.request.get('_route') == 'project_add' %}Ajout {% else %}  Edition {% endif %}d'un projet</h1>
			</div>
			<ul class="app-breadcrumb breadcrumb">
				<li class="breadcrumb-item">
					<a href="{{ path('main_homepage') }}">
						<i class="fa fa-home fa-lg"></i>
					</a>
				</li>
				<li class="breadcrumb-item">
					<a href="{{ path('project_list') }}">Projets</a>
				</li>
				<li class="breadcrumb-item"> {% if app.request.get('_route') == 'project_add' %} Ajout {% else %} Edition {% endif %}d'un projet</li>
			</ul>
		</div>
		<div class="tile">
            {% for flash_type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ flash_type }}" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
			{{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
			<section>
				<h3>Informations générales</h3>
				<div class="row mt-4">
					<div class="offset-md-4 col-md-8">
						<div class="form-group row">
							{{ form_errors(form.name) }}
							{{ form_label(form.name) }}
							{{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': form.name.vars.label} }) }}
						</div>
						<div class="form-group row">
							{{ form_errors(form.description) }}
							{{ form_label(form.description) }}
							{{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': form.description.vars.label} }) }}
						</div>
						<div class="form-group row">
							{{ form_errors(form.price) }}
							{{ form_label(form.price) }}
							{{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': form.price.vars.label} }) }}
						</div>
					</div>
				</div>
			</section>
			<hr/>
			<section>
				<h3>Production</h3>
				<div class="row mt-4">
					<div class="offset-md-4 col-md-8">
						<div class="form-group row">
							{{ form_errors(form.createdAt) }}
							{{ form_label(form.createdAt) }}
							{{ form_widget(form.createdAt, {'attr': {'class': 'form-control', 'placeholder': form.createdAt.vars.label} }) }}
						</div>
						<div class="form-group row">
							{{ form_errors(form.deliveredAt) }}
							{{ form_label(form.deliveredAt) }}
							{{ form_widget(form.deliveredAt, {'attr': {'class': 'form-control', 'placeholder': form.deliveredAt.vars.label} }) }}
						</div> 
					</div>
				</div>
			</section>
			<hr/>
			<div class="row">
				<div class="offset-md-6 col-md-6">
					<button type="submit" class="btn btn-success">
						<i class="fa fa-save"></i>Enregistrer</a>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</main>


{% endblock %}
